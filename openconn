#!/bin/bash

# Function to display help
function display_help() {
    echo -e "\033[1;36mUsage:\033[0m"
    echo -e "  ./openconn.sh [ARGUMENT]"
    echo -e "\nDescription:"
    echo -e "  Lists open TCP and UDP connections."
    echo -e "  If a username, command name, port or other column is provided as an ARGUMENT, only connections for that filter will be displayed."
    echo -e "\nOptions:"
    echo -e "  ARGUMENT\t\tFilter results to only show those belonging to the specified user, command name, port or other column."
    echo -e "\nExamples:"
    echo -e "  ./openconn.sh florin\t# List connections for user 'florin'"
    echo -e "  ./openconn.sh cupsd\t# List connections for the 'cupsd' command"
    echo -e "  ./openconn.sh :631\t# List connections using port 631"
    echo -e "  ./openconn.sh\t\t# List all connections"
    exit 0
}

# Check for help flag
if [[ "$1" == "--help" || "$1" == "-h" ]]; then
    display_help
fi

# Check if lsof is installed
if ! command -v lsof &> /dev/null; then
    echo -e "\033[1;31mError: lsof is not installed.\033[0m"  # Red for error
    exit 1
fi

user_filter="${1:-}"  # Default to empty, filter can be passed as an argument

{
  # Check if running in a terminal that supports underlining
  if [ -t 1 ]; then
      underline="\033[4m"  # Underline for supporting terminals
  else
      underline=""  # No underline for non-supporting terminals
  fi

  # Print header with cyan formatting and underline
  printf "${underline}\033[1;36m%-10s %-5s %-10s %-4s %-6s %-7s %-40s %-15s\033[0m\n" "COMMAND" "PID" "USER" "FD" "TYPE" "PROTO" "ADDRESS/PORT" "STATE"

  lsof -Pni{4,6}{TCP,UDP} | sed '1d' | \
  while read -r line; do
    # Remove DEVICE and SIZE/OFF fields (fields 6 and 7)
    filtered_line=$(echo "$line" | awk '{ $6=""; $7=""; print $0 }' | sed 's/  */ /g')  # Replace multiple spaces with a single space

    if [[ -n "$user_filter" && "$filtered_line" != *"$user_filter"* ]]; then
        continue  # Skip lines that don't match the user filter
    fi

    # Print with formatting for each column
    if echo "$filtered_line" | grep -q "TCP"; then
        printf "\033[1;32m%-10s %-5s %-10s %-4s %-6s %-7s %-40s %-15s\033[0m\n" $filtered_line  # Green for "TCP"
    elif echo "$filtered_line" | grep -q "UDP"; then
        printf "\033[1;33m%-10s %-5s %-10s %-4s %-6s %-7s %-40s %-15s\033[0m\n" $filtered_line  # Yellow for "UDP"
    else
        printf "%-10s %-5s %-10s %-4s %-6s %-7s %-40s %-15s\n" $filtered_line
    fi
  done | sort -k3,3 -k1,1
}

